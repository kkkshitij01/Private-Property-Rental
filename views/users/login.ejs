<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Login on Property Rental</h1>
  <div class="col-6 offset-3">
    <form
      action="/login"
      method="POST"
      class="needs-validation mt-4"
      novalidate
    >
      <div class="mb-3">
        <label for="username" class="form-lable">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-lable">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
